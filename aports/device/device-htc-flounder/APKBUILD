pkgname="device-htc-flounder"
pkgdesc="Google Nexus 9"
pkgver=0.1
pkgrel=0
url="https://postmarketos.org"
license="gpl-v3"
arch="aarch64"
options="!check"
depends="postmarketos-base linux-htc-flounder mkbootimg mesa-dri-swrast linux-firmware firmware-htc-flounder"
makedepends="devicepkg-dev"
#subpackages="$pkgname-fstab"
source="deviceinfoh"

build() {
	devicepkg_build $startdir $pkgname 
}
package() {
	install -D -m644 "$srcdir"/deviceinfo \
		"$pkgdir"/etc/deviceinfo
}



